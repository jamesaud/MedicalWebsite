FROM python:3.5

ENV PYTHONUNBUFFERED 1

# Requirements have to be pulled and installed here, otherwise caching won't work
COPY ./requirements /requirements
RUN pip install -r /requirements/local.txt

COPY ./compose/django/entrypoint.sh /entrypoint.sh
RUN sed -i 's/\r//' /entrypoint.sh
RUN chmod +x /entrypoint.sh

WORKDIR /app

ENTRYPOINT ["/entrypoint.sh"]

#ADDED BY ME - NEED TO FORMAT BETTER
RUN apt-get update \
    && apt-get install -y nodejs \
    && apt-get install -y npm

RUN pip install libsass django-compressor django-sass-processor

RUN npm install readmore-js

RUN npm install -g bower

RUN npm install --save lightbox2

# Symlink Bower
RUN ln -s /usr/bin/nodejs /usr/bin/node

#RUN bower install --allow-root   #Install bower package dependencies.
